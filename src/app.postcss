/* ==========================================================================
   BASE STYLES
   ========================================================================== */
@layer base {
  html {
    @apply antialiased;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    font-family: var(--font-family);
  }

  body {
    @apply min-h-screen;
    background-color: var(--page-bg);
    color: var(--text-primary);
  }

  /* Typography */
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-family-heading);
    color: var(--text-primary);
    font-weight: 600;
  }

  /* Global markdown-like content styling */
  h1 {
    font-size: 2rem;
    font-weight: 700;
    border-bottom: 3px solid var(--border);
    padding-bottom: 0.5rem;
    margin-bottom: 1.5rem;
  }

  h2 {
    font-size: 1.75rem;
    font-weight: 700;
    border-bottom: 2px solid var(--border);
    padding-bottom: 0.25rem;
    margin-bottom: 1rem;
  }

  h3 {
    font-size: 1.375rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  h4 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  h5 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  h6 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  /* Global paragraph styling */
  p {
    color: var(--text-primary);
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  /* Global list styling */
  ul, ol {
    color: var(--text-primary);
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  li {
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }

  /* Global link styling */
  a {
    color: var(--accent);
    text-decoration: underline;
  }

  a:hover {
    color: var(--accent-hover);
  }

  /* Global strong/em styling */
  strong, b {
    color: var(--text-primary);
    font-weight: 700;
  }

  em, i {
    color: var(--text-primary);
    font-style: italic;
  }

  /* Focus States */
  *:focus {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  /* Selection */
  ::selection {
    background-color: var(--accent);
    color: white;
  }

  /* Scrollbar Styling */
  .scrollbar-thin {
    scrollbar-width: thin;
  }

  .scrollbar-thin::-webkit-scrollbar {
    width: 6px;
  }

  .scrollbar-thin::-webkit-scrollbar-track {
    background-color: var(--bg-secondary);
  }

  .scrollbar-thin::-webkit-scrollbar-thumb {
    background-color: var(--border);
    border-radius: 3px;
  }

  .scrollbar-thin:hover::-webkit-scrollbar-thumb {
    background-color: var(--text-muted);
  }
}

/* ==========================================================================
   COMPONENT STYLES
   ========================================================================== */
@layer components {
  /* Buttons */
  .btn-primary {
    @apply font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2;
    background-color: var(--accent);
    color: white;
    transition: all 0.2s ease;
  }

  .btn-primary:hover {
    background-color: var(--accent-hover);
    transform: translateY(-1px);
  }

  .btn-secondary {
    @apply font-medium py-2 px-4 rounded-md border focus:outline-none focus:ring-2 focus:ring-offset-2;
    background-color: var(--bg-secondary);
    color: var(--text-primary);
    border-color: var(--border);
    transition: all 0.2s ease;
  }

  .btn-secondary:hover {
    background-color: var(--bg-tertiary);
    transform: translateY(-1px);
  }

  /* Form Elements */
  input, textarea, select {
    @apply px-3 py-2 rounded-md border focus:outline-none;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    border-color: var(--border);
    transition: all 0.2s ease;
  }

  input:focus, textarea:focus, select:focus {
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  /* Cards */
  .card {
    @apply p-6 rounded-lg shadow-sm border;
    background-color: var(--bg-primary);
    border-color: var(--border);
  }

  /* Code Elements */
  code {
    @apply px-2 py-1 rounded text-sm font-mono;
    background-color: var(--code-block-bg);
    color: var(--code-block-text);
    border: 0.5px solid var(--code-block-border);
    font-family: var(--font-family-mono);
  }

  /* Prose-specific inline code */
  .prose code {
    @apply px-2 py-1 rounded text-sm font-mono;
    background-color: var(--code-block-bg);
    color: var(--code-block-text);
    border: 0.5px solid var(--code-block-border);
    font-family: var(--font-family-mono);
    font-size: 0.9em;
  }

  /* Code Blocks - NO INTERNAL BORDERS */
  pre {
    @apply px-4 rounded-md overflow-x-auto my-4;
    padding-top: 24px !important;
    padding-bottom: 24px !important;
    background-color: var(--code-block-bg);
    color: var(--code-block-text);
    border: 0.5px solid var(--code-block-border);
    line-height: 1.2 !important;
    white-space: pre !important;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace !important;
  }

  /* Code block content - NO INTERNAL BORDERS */
  pre code {
    background: transparent;
    border: none;
    padding: 0;
    line-height: 1.2 !important;
  }

  /* Force line-height on all code block elements */
