  }

  /* AsciiDoc Quote Blocks */
  .quoteblock {
    background-color: var(--bg-secondary) !important;
    border-left: 4px solid var(--accent) !important;
    color: var(--text-primary) !important;
  }

  .quoteblock .title {
    color: var(--text-secondary) !important;
  }

  /* AsciiDoc Verse Blocks */
  .verseblock {
    background-color: var(--bg-secondary) !important;
    border-left: 4px solid var(--accent) !important;
    color: var(--text-primary) !important;
  }

  .verseblock .title {
    color: var(--text-secondary) !important;
  }

  /* AsciiDoc Example Blocks */
  .exampleblock {
    background-color: var(--bg-secondary) !important;
    border: 1px solid var(--border) !important;
    color: var(--text-primary) !important;
  }

  .exampleblock .title {
    color: var(--text-primary) !important;
  }

  /* AsciiDoc Listing Blocks */
  .listingblock {
    background-color: var(--bg-secondary) !important;
    border: 1px solid var(--border) !important;
  }

  .listingblock .title {
    color: var(--text-primary) !important;
  }

  .listingblock pre {
    background-color: var(--code-block-bg) !important;
    color: var(--code-block-text) !important;
    line-height: 1.2 !important;
    white-space: pre !important;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace !important;
  }

  /* AsciiDoc Literal Blocks */
  .literalblock {
    background-color: var(--bg-secondary) !important;
    border: 1px solid var(--border) !important;
  }

  .literalblock .title {
    color: var(--text-primary) !important;
  }

  .literalblock pre {
    background-color: var(--code-block-bg) !important;
    color: var(--code-block-text) !important;
    line-height: 1.2 !important;
    white-space: pre !important;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace !important;
  }

  /* AsciiDoc Source Blocks */
  .sourceblock {
    background-color: var(--bg-secondary) !important;
    border: 1px solid var(--border) !important;
  }

  .sourceblock .title {
    color: var(--text-primary) !important;
  }

  .sourceblock pre {
    background-color: var(--code-block-bg) !important;
    color: var(--code-block-text) !important;
    line-height: 1.2 !important;
    white-space: pre !important;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace !important;
  }

  /* AsciiDoc Callouts */
  .colist {
    background-color: var(--bg-secondary) !important;
    border: 1px solid var(--border) !important;
    color: var(--text-primary) !important;
  }

  .colist .callout {
    background-color: var(--accent) !important;
    color: white !important;
  }

  /* AsciiDoc Lists */
  .ulist,
  .olist,
  .dlist {
    color: var(--text-primary) !important;
  }

  .ulist .title,
  .olist .title,
  .dlist .title {
    color: var(--text-primary) !important;
  }

  /* AsciiDoc Images */
  .imageblock {
    background-color: var(--bg-secondary) !important;
    border: 1px solid var(--border) !important;
  }

  .imageblock .title {
    color: var(--text-secondary) !important;
  }

  /* AsciiDoc Tables */
  .tableblock {
    background-color: var(--bg-secondary) !important;
    border: 1px solid var(--border) !important;
  }

  .tableblock .title {
    color: var(--text-primary) !important;
  }

  .tableblock table {
    background-color: var(--bg-primary) !important;
    color: var(--text-primary) !important;
  }

  .tableblock th {
    background-color: var(--bg-secondary) !important;
    color: var(--text-primary) !important;
    border: 1px solid var(--border) !important;
  }

  .tableblock td {
    background-color: var(--bg-primary) !important;
    color: var(--text-primary) !important;
    border: 1px solid var(--border) !important;
  }

  /* AsciiDoc Open Blocks */
  .openblock {
    background-color: var(--bg-secondary) !important;
    border: 1px solid var(--border) !important;
    color: var(--text-primary) !important;
  }

  .openblock .title {
    color: var(--text-primary) !important;
  }

  /* Animations */
  .animate-fade-in {
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-2px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
}

